{
    "name": "havenstd06/limg-php-client",
    "description": "PHP package for the Limg.app website - allowing to upload images via the API of the website.",
    "keywords": [
        "Havenstd06",
        "limg-php-client",
        "Limg",
        "Symfony",
        "Laravel"
    ],
    "homepage": "https://github.com/havenstd06/limg-php-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas",
            "email": "me@hvs.cx",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.28",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Havenstd06\\Limg\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Havenstd06\\Limg\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
